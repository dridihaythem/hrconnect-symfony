{% extends 'base.html.twig' %}

{% block title %}{{ offre_emploi.titre }}{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">{{ offre_emploi.titre }}</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Type de contrat</label>
                                    <p>{{ offre_emploi.typeContrat }}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Localisation</label>
                                    <p>{{ offre_emploi.localisation }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Salaire</label>
                                    <p>{{ offre_emploi.salaire }}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Date de publication</label>
                                    <p>{{ offre_emploi.datePublication|date('d/m/Y') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <p>{{ offre_emploi.description }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Profil recherché</label>
                                    <p>{{ offre_emploi.profilRecherche }}</p>
                                </div>
                            </div>
                        </div>
                        {% if offre_emploi.avantages %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Avantages</label>
                                    <p>{{ offre_emploi.avantages }}</p>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        <div class="text-end">
                            <a href="{{ path('app_candidature_new', {'id': offre_emploi.id}) }}" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Postuler à cette offre
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 