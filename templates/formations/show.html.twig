{% extends 'base.html.twig' %}

{% block title %}Formation
{% endblock %}

{% block body %}
	<h1>Formation</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ formation.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ formation.title }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ formation.image }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ formation.description }}</td>
			</tr>
			<tr>
				<th>Is_online</th>
				<td>{{ formation.isOnline ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Place</th>
				<td>{{ formation.place }}</td>
			</tr>
			<tr>
				<th>Lat</th>
				<td>{{ formation.lat }}</td>
			</tr>
			<tr>
				<th>Lng</th>
				<td>{{ formation.lng }}</td>
			</tr>
			<tr>
				<th>Available_for_employee</th>
				<td>{{ formation.availableForEmployee ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Available_for_intern</th>
				<td>{{ formation.availableForIntern ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Start_date</th>
				<td>{{ formation.startDate ? formation.startDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End_date</th>
				<td>{{ formation.endDate ? formation.endDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ formation.price }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_formations_index') }}">back to list</a>

	<a href="{{ path('app_formations_edit', {'id': formation.id}) }}">edit</a>

	{{ include('formation_controller_v2/_delete_form.html.twig') }}
{% endblock %}
