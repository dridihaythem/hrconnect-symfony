{% extends 'base.html.twig' %}

{% block title %}{{ offre.titre }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            margin-bottom: 30px;
        }
        .card-header {
            background-color: #007bff;
            color: white;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
        .breadcrumb {
            background-color: transparent;
            padding-left: 0;
        }
        .breadcrumb-item a {
            color: #007bff;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_public_offres_emploi') }}">Offres d'emploi</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ offre.titre }}</li>
                </ol>
            </nav>
            <h1 class="mb-4">Détail de l'offre</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">{{ offre.titre }}</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label><i class="fas fa-briefcase mr-2"></i>Type de contrat</label>
                                <p class="form-control-static">{{ offre.typeContrat }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label><i class="fas fa-map-marker-alt mr-2"></i>Localisation</label>
                                <p class="form-control-static">{{ offre.localisation }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label><i class="fas fa-money-bill-wave mr-2"></i>Salaire</label>
                                <p class="form-control-static">{{ offre.salaire }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label><i class="fas fa-calendar-alt mr-2"></i>Date de publication</label>
                                <p class="form-control-static">{{ offre.datePublication|date('d/m/Y') }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label><i class="fas fa-file-alt mr-2"></i>Description</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.description|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label><i class="fas fa-user mr-2"></i>Profil recherché</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.profilRecherche|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if offre.avantages %}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label><i class="fas fa-gift mr-2"></i>Avantages</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.avantages|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a href="{{ path('app_candidature_new', {'id': offre.id}) }}" class="btn btn-primary">
                                <i class="fas fa-paper-plane mr-2"></i> Postuler à cette offre
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
