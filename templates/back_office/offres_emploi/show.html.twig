{% extends 'back_office.html.twig' %}

{% block title %}{{ offre.titre }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_back_office') }}"><img src="{{ asset('assets/img/dash.png')}}" class="mr-2" alt="breadcrumb"/>Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('back.offres_emploi.index') }}">Offres d'emploi</a>
                    </li>
                    <li class="breadcrumb-item active">{{ offre.titre }}</li>
                </ul>
                <h3>Détail de l'offre</h3>
            </div>
        </div>

        <div class="col-xl-12 col-sm-12 col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">{{ offre.titre }}</h4>
                    <div class="card-tools">
                        <a href="{{ path('back.offres_emploi.edit', {'id': offre.id}) }}" class="btn btn-primary">
                            <i data-feather="edit"></i> Modifier
                        </a>
                        <a href="{{ path('back.offres_emploi.delete', {'id': offre.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')">
                            <i data-feather="trash-2"></i> Supprimer
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Type de contrat</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i data-feather="briefcase"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" value="{{ offre.typeContrat }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Localisation</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i data-feather="map-pin"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" value="{{ offre.localisation }}" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Salaire</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i data-feather="dollar-sign"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" value="{{ offre.salaire }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Date de publication</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i data-feather="calendar"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" value="{{ offre.datePublication|date('d/m/Y') }}" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Statut</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i data-feather="check-circle"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" value="{{ offre.isActive ? 'Active' : 'Inactive' }}" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-form-label">Description</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.description|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-form-label">Profil recherché</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.profilRecherche|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if offre.avantages %}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-form-label">Avantages</label>
                                <div class="p-3 bg-light rounded">
                                    {{ offre.avantages|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation des icônes Feather
            if (typeof feather !== 'undefined') {
                feather.replace();
            }
        });
    </script>
{% endblock %}
