<div class="">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {% if not form.vars.valid %}
        <div class="alert alert-danger p-4">
            <i class="fas fa-times-circle"></i>
            There were errors in the form. Please correct them before submitting.
        </div>
    {% endif %}

    {# --- 1. Reclamation Details --- #}
    <div class="col-xl-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-titles">Reclamation Details
                    <span>Provide details about your reclamation.</span>
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Select a type'}}) }}
                            <div class="text-danger error-text">{{ form_errors(form.type) }}</div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-12 col-12">
                        <div class="form-group">
                            {{ form_widget(form.dateOfSubmission, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger error-text">{{ form_errors(form.dateOfSubmission) }}</div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Describe your issue', 'rows': 6}}) }}
                    <div class="text-danger error-text">{{ form_errors(form.description) }}</div>
                </div>
            </div>
        </div>
    </div>

    {# --- 2. Submit Button --- #}
    <div class="row mt-4">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="form-btn">
                <button type="submit" class="btn btn-apply w-auto">{{ button_label|default('Submit') }}</button>
                <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
</div>
