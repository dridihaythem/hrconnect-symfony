{% extends 'base.html.twig' %}

{% block title %}Détails du Ticket de Réclamation{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">Détails du Ticket de Réclamation</h1>
                    <div>
                        <a href="{{ path('app_ticket_reclamation_edit', {'id': ticket.id}) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ ticket.id }}</td>
                            </tr>
                            <tr>
                                <th>Reclamation</th>
                                <td>
                                    <a href="{{ path('app_reclamation_show', {'id': ticket.reclamation.id}) }}">
                                        {{ ticket.reclamation.id }}
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Nom du Personnel RH</th>
                                <td>{{ ticket.hrStaffName }}</td>
                            </tr>
                            <tr>
                                <th>Message de Réponse</th>
                                <td>{{ ticket.responseMessage }}</td>
                            </tr>
                            <tr>
                                <th>Date de Réponse</th>
                                <td>{{ ticket.dateOfResponse ? ticket.dateOfResponse|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Action Entreprise</th>
                                <td>{{ ticket.actionTaken }}</td>
                            </tr>
                            <tr>
                                <th>Statut de Résolution</th>
                                <td>{{ ticket.resolutionStatus }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_ticket_reclamation_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>

                        <form method="post" action="{{ path('app_ticket_reclamation_edit', {'id': ticket.id}) }}">
                            <button class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
