{% extends 'base.html.twig' %}

{% block body %}
<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Ticket Reclamations</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_back_office') }}">Home</a></li>
                        <li class="breadcrumb-item active">Ticket Reclamations</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('app_ticket_reclamation_new') }}" class="btn btn-success">Add new ticket</a>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Reclamation ID</th>
                                <th>HR Staff</th>
                                <th>Response</th>
                                <th>Date</th>
                                <th>Action Taken</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ticket in ticket_reclamations %}
                                <tr>
                                    <td>{{ ticket.id }}</td>
                                    <td>{{ ticket.reclamation.id }}</td> <!-- Corrected line -->
                                    <td>{{ ticket.hrStaffName }}</td>
                                    <td>{{ ticket.responseMessage|slice(0, 30) ~ '...' }}</td>
                                    <td>{{ ticket.dateOfResponse ? ticket.dateOfResponse|date('Y-m-d H:i') : '' }}</td>
                                    <td>{{ ticket.actionTaken }}</td>
                                    <td>
                                        {% if ticket.resolutionStatus == 'Resolved' %}
                                            <span class="badge bg-success">Resolved</span>
                                        {% else %}
                                            <span class="badge bg-warning">Pending</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_ticket_reclamation_show', {'id': ticket.id}) }}" class="btn btn-sm btn-success">Show</a>
                                        <a href="{{ path('app_ticket_reclamation_edit', {'id': ticket.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">No tickets found.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
