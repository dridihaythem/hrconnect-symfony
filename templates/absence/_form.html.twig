<div class="container mt-5">
    {{ form_start(form, {'attr': {'id': 'absence_form', 'novalidate': 'novalidate'}}) }}

    {# Display a general error alert if there are any errors in the form #}
    {% if not form.vars.valid %}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i> There were errors in the form. Please correct them before submitting.
        </div>
    {% endif %}

    <div class="mb-4">
        {{ form_label(form.motif, null, {'label_attr': {'class': 'form-label fs-4'}}) }}
        {{ form_widget(form.motif, {'attr': {'class': 'form-select form-control-lg'}}) }}
        <div class="text-danger">{{ form_errors(form.motif) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.justificatif, null, {'label_attr': {'class': 'form-label fs-4'}}) }}
        {{ form_widget(form.justificatif, {'attr': {'class': 'form-control form-control-lg'}}) }}
        <div class="text-danger">{{ form_errors(form.justificatif) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.remarque, null, {'label_attr': {'class': 'form-label fs-4'}}) }}
        {{ form_widget(form.remarque, {'attr': {'class': 'form-control form-control-lg'}}) }}
        <div class="text-danger">{{ form_errors(form.remarque) }}</div>
    </div>
        <div class="col-md-6 mb-4">
            {{ form_label(form.employe, null, {'label_attr': {'class': 'form-label fs-4'}}) }}
            {{ form_widget(form.employe, {'attr': {'class': 'form-select form-control-lg'}}) }}
            <div class="text-danger">{{ form_errors(form.employe) }}</div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="reset" class="btn btn-danger me-2">
            <i class="fas fa-times me-2"></i>Reset
        </button>
        <button type="submit" class="btn btn-warning">
            <i class="fas fa-save me-2"></i>Submit
        </button>
    </div>
    {{ form_end(form) }}
</div>